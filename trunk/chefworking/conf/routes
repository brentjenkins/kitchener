# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Signup pages
GET     /signup                     controllers.SignUp.blank()
POST    /signup                     controllers.SignUp.submit()

# User pages
GET     /users                      controllers.Application.users()
POST    /users/:id/delete           controllers.Application.deleteUser(id: Long)

# Restaurant pages
GET     /restaurants                controllers.Application.restaurants
POST    /restaurants                controllers.Application.newRestaurant()

# Job History pages
GET     /jobHistories               controllers.Application.jobHistories
POST    /jobHistories               controllers.Application.newJobHistory
POST    /jobHistories/:id/delete    controllers.Application.deleteJobHistory(id: Long)

# Job Posting pages
GET     /jobPostings                controllers.Application.jobPostings
GET     /jobPostings/:id/get        controllers.Application.jobPosting(id: Long)
POST    /jobPostings                controllers.Application.newJobPosting
POST    /jobPostings/:id/delete     controllers.Application.deleteJobPosting(id: Long)

# Referral pages
POST    /referrals                  controllers.Application.askForReferral
POST    /referrals                  controllers.Application.provideReferral

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
